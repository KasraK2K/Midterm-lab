extends layout

block content
    .container
        .row
            .col-6.offset-3
                if books.length
                    table.table.table-striped
                        thead.thead-dark
                            tr
                                th(scope='col') #
                                th(scope='col') Title
                                th(scope='col') Writer
                                th(scope='col') Description
                        tbody
                            each book, i in books
                                tr
                                    th(scope='row') #{i+1}
                                    td #{book.title}
                                    td #{book.writer}
                                    td #{book.description}
                else
                    .h2.text-center.text-danger Can't Find Any Book
